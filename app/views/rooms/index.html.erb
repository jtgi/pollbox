<h1>Welcome to your Room Manager</h1>
<div class="row">

	<div class="span3">
		<%= link_to "Create a new Room", :controller => "rooms", :action=>"new" %>
	</div>
	<div class="span3">
		Owned Rooms:
		<ul>
			<% unless @rooms_created.empty? %>
				<% @rooms_created.each do |room| %>
					<li><%= link_to room.name, :controller =>"rooms", :action=>"show", :id=>room.id	 %></li>
				<% end %>
			<% end %>
		</ul>
	</div>
	<div class="span3">
		Registered Rooms:
		<ul>
			<% unless @rooms_registered.empty? %>
				<% @rooms_registered.each do |room| %>
					<li><%= link_to room.name, :controller =>"rooms", :action=>"show", :id=>room.id %></li>
				<% end %>
			<% end %>
		</ul>
	</div>
