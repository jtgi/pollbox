<h1>Welcome to your Room Manager</h1>
<div class="row">

	<div class="span3">
		<%= link_to "Create a new Room", :controller => "rooms", :action=>"new" %>
	</div>
	<div class="span3">
		Owned Rooms:
		<ul>
			<% unless @owned_rooms.empty? %>
				<% @owned_rooms.each do |room| %>
					<li><%= link_to room.name,room_path(room) %></li>
				<% end %>
			<% end %>
		</ul>
	</div>
	<div class="span3">
		Registered Rooms:
		<ul>
			<% unless @not_owned_rooms.empty? %>
				<% @not_owned_rooms.each do |room| %>
					<li><%= link_to room.name, :controller =>"rooms", :action=>"show", :id=>room.id %></li>
				<% end %>
			<% end %>
		</ul>
	</div>
</div>
