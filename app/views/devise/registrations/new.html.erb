<div class="container">
  <legend>Sign up</legend>
  <div class="well">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class=> "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <%= f.label :first_name, class: "control-label" %><br />
      <div class="input-prepend">
      <span class="add-on"><i class="icon-user"></i></span>
       <%= f.text_field :first_name, class: "input-xlarge", placeholder: "First Name"%></div>
    </div>
    <div><%= f.label :last_name, class: "control-label" %><br />
      <div class="input-prepend">
      <span class="add-on"><i class="icon-user"></i></span>
       <%= f.text_field :last_name, class: "input-xlarge", placeholder: "Last Name"%></div>
    </div>
   
    <div><%= f.label :email, class: "control-label" %><br />
      <div class="input-prepend">
      <span class="add-on"><i class="icon-envelope"></i></span>
    <%= f.email_field :email, class: "input-xlarge", placeholder: "Email"%></div>
    </div>

    <div><%= f.label :password, class: "control-label" %><br />
      <div class="input-prepend">
      <span class="add-on"><i class="icon-lock"></i></span>
      <%= f.password_field :password, class: "input-xlarge", placeholder: "Password"%></div>
    </div>

    <div><%= f.label :password_confirmation, class: "control-label" %><br />
      <div class="input-prepend">
      <span class="add-on"><i class="icon-lock"></i></span>
      <%= f.password_field :password_confirmation, class: "input-xlarge", placeholder: "Re-enter Password"  %></div>
    </div>

    <div><%= f.submit "Sign up", class: "btn btn-primary btn-large" %></div>
  <% end %>

  <%= render :partial => "devise/shared/links" %>
</div>
</div>